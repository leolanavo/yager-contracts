{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@typings/*": [
        "src/typings/*"
      ],
      "@mongodb/*": [
        "src/db/mongodb/*"
      ],
      "@postgres/*": [
        "src/db/postgres/*"
      ],
      "@neo4j/*": [
        "src/db/neo4j/*"
      ],
      "@resolvers/*": [
        "src/resolvers/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts"
  ]
}